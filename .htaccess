# -------------------------------------
# PLUSQULEBI.GE — Static Site Optimized Config
# -------------------------------------

# Redirect all HTTP requests to HTTPS
server {
    listen 80;
    server_name plusqulebi.ge www.plusqulebi.ge;
    return 301 https://$host$request_uri;
}

# Main HTTPS Server Block
server {
    listen 443 ssl http2;
    server_name plusqulebi.ge www.plusqulebi.ge;

    root /var/www/plusqulebi.ge;   # <--- შეცვალე შენი საიტის ფოლდერად
    index index.html;

    # SSL Certificates (Let's Encrypt example)
    ssl_certificate /etc/letsencrypt/live/plusqulebi.ge/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/plusqulebi.ge/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/plusqulebi.ge/chain.pem;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # ----------------------------
    # ✅ GZIP Compression (Optimized)
    # ----------------------------
    gzip on;
    gzip_comp_level 6;
    gzip_min_length 256;
    gzip_vary on;
    gzip_proxied any;
    gzip_types
        text/plain
        text/css
        text/javascript
        application/javascript
        application/x-javascript
        application/json
        application/xml
        application/rss+xml
        application/atom+xml
        image/svg+xml
        font/woff
        font/woff2
        font/ttf
        font/otf;

    # Brotli compression (if available)
    brotli on;
    brotli_comp_level 6;
    brotli_types
        text/plain
        text/css
        text/javascript
        application/javascript
        application/json
        application/xml
        image/svg+xml
        font/woff
        font/woff2;

    # ----------------------------
    # ✅ Browser Caching (Optimized for PageSpeed Insights)
    # ----------------------------
    
    # Static assets with long-term caching (1 year)
    location ~* \.(jpg|jpeg|png|gif|svg|webp|ico|css|js|woff|woff2|ttf|eot|pdf|zip|mp4|webm|ogg|mp3|wav)$ {
        expires 1y;
        add_header Cache-Control "public, max-age=31536000, immutable";
        add_header Vary "Accept-Encoding";
        etag on;
        access_log off;
    }

    # HTML files with optimized caching for static sites
    location ~* \.(html|htm)$ {
        expires 1d;
        add_header Cache-Control "public, max-age=86400, must-revalidate";
        add_header Vary "Accept-Encoding";
        etag on;
    }

    # API endpoints and dynamic content
    location ~* \.(json|xml)$ {
        expires 1h;
        add_header Cache-Control "public, max-age=3600, must-revalidate";
        add_header Vary "Accept-Encoding";
        etag on;
    }

    # ----------------------------
    # ✅ Performance Optimizations
    # ----------------------------
    
    # Enable HTTP/2 Server Push for critical resources
    location = / {
        add_header Link "</css/critical.css>; rel=preload; as=style";
        add_header Link "</js/critical.js>; rel=preload; as=script";
    }

    # Optimize connection handling
    keepalive_timeout 65;
    keepalive_requests 100;
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;

    # ----------------------------
    # ✅ Security Headers
    # ----------------------------
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "DENY" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Permissions-Policy "geolocation=(), microphone=(), camera=()" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;

    # ----------------------------
    # ✅ Content Security Policy (CSP)
    # ----------------------------
    add_header Content-Security-Policy "default-src 'self';
        script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.google-analytics.com https://www.googletagmanager.com;
        style-src 'self' 'unsafe-inline' https://fonts.googleapis.com;
        font-src 'self' https://fonts.gstatic.com;
        img-src 'self' data: https:;
        connect-src 'self' https://www.google-analytics.com;
        frame-src 'self' https://www.youtube.com https://www.youtube-nocookie.com;" always;

    # ----------------------------
    # ✅ Remove Trailing Slashes
    # ----------------------------
    if ($request_uri ~ "^(.+)/+$") {
        return 301 $1;
    }

    # ----------------------------
    # ✅ Error Pages
    # ----------------------------
    error_page 404 /404.html;
    error_page 500 502 503 504 /500.html;

    location = /404.html {
        root /var/www/plusqulebi.ge;
        internal;
    }

    location = /500.html {
        root /var/www/plusqulebi.ge;
        internal;
    }

    # ----------------------------
    # ✅ Block Access to Sensitive Files
    # ----------------------------
    location ~ /\.(htaccess|htpasswd|ini|log|conf|sql|sh)$ {
        deny all;
    }
}
