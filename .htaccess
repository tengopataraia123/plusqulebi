# ----------------------------
# PLUSQULEBI.GE - Optimized Nginx Configuration
# ----------------------------

# Force redirect from HTTP to HTTPS
server {
    listen 80;
    server_name plusqulebi.ge www.plusqulebi.ge;
    return 301 https://$host$request_uri;
}

# Main HTTPS Server Block
server {
    listen 443 ssl http2;
    server_name plusqulebi.ge www.plusqulebi.ge;

    root /var/www/plusqulebi.ge;   # შეცვალე შენი საიტის root დირექტორია
    index index.html index.php;

    # SSL Certificates (შეცვალე შენს შესაბამის ფაილებად)
    ssl_certificate /etc/letsencrypt/live/plusqulebi.ge/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/plusqulebi.ge/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/plusqulebi.ge/chain.pem;

    # SSL Optimization
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # ----------------------------
    # GZIP Compression
    # ----------------------------
    gzip on;
    gzip_comp_level 6;
    gzip_min_length 256;
    gzip_vary on;
    gzip_proxied any;
    gzip_types
        text/plain
        text/css
        text/javascript
        application/javascript
        application/x-javascript
        application/json
        application/xml
        application/xml+rss
        image/svg+xml
        font/woff
        font/woff2;

    # ----------------------------
    # Browser Caching
    # ----------------------------
    location ~* \.(jpg|jpeg|png|gif|svg|webp|ico|css|js|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, max-age=31536000, immutable";
        access_log off;
    }

    location ~* \.(html|htm)$ {
        expires 1h;
        add_header Cache-Control "no-cache";
    }

    # ----------------------------
    # Security Headers
    # ----------------------------
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "DENY" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Permissions-Policy "geolocation=(), microphone=(), camera=()" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;

    # ----------------------------
    # Content Security Policy (CSP)
    # ----------------------------
    add_header Content-Security-Policy "default-src 'self'; 
        script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.google-analytics.com https://www.googletagmanager.com;
        style-src 'self' 'unsafe-inline' https://fonts.googleapis.com;
        font-src 'self' https://fonts.gstatic.com;
        img-src 'self' data: https:;
        connect-src 'self' https://www.google-analytics.com;
        frame-src 'self' https://www.youtube.com https://www.youtube-nocookie.com;" always;

    # ----------------------------
    # Redirect URLs without trailing slash
    # ----------------------------
    if ($request_uri ~ "^(.+)/+$") {
        return 301 $1;
    }

    # ----------------------------
    # Error Pages
    # ----------------------------
    error_page 404 /404.html;
    error_page 500 502 503 504 /500.html;

    location = /404.html {
        root /var/www/plusqulebi.ge;
        internal;
    }

    location = /500.html {
        root /var/www/plusqulebi.ge;
        internal;
    }

    # ----------------------------
    # Block Access to Sensitive Files
    # ----------------------------
    location ~ /\.(htaccess|htpasswd|ini|log|conf|sql|sh)$ {
        deny all;
    }

    # ----------------------------
    # PHP Support (თუ იყენებ)
    # ----------------------------
    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php8.2-fpm.sock; # შეასწორე შენი PHP ვერსიის მიხედვით
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }
}
